{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2024", "DOM"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strictNullChecks": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
